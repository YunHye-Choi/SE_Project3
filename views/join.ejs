        <tr>
          <td >비밀번호 확인 <span>*</span> </td>
          <td style="text-align: left; "><input type="password" style="width: 200px;" name ="passwdcheck" id="passwdcheck" required></td>
        </tr>
        <tr>
        <td >이름 <span>*</span> </td>
          <td style="text-align: left;"><input type="text" style="width: 200px;" name ="name" id="name" required></td>
        </tr>
        <tr>
          <td >이메일</td>
          <td style="text-align: left; "><input type="text" style="width: 200px;" name ="email" id="email" required></td>
        </tr>
        <tr>
          <td >휴대전화</td>
          <td style="text-align: left;"><input type="text" style="width: 200px;" name ="phone_number" id="phone_number" required></td>
        </tr>
        <tr>
          <td >생년월일</td>
          <td style="text-align: left;"><input type="text" style="width: 200px;" name ="birthday" id="birthday" required></td>
        </tr>
        <tr>
          <td >주소 <span>*</span></td>
          <td style="text-align: left;"><input type="text" style="width: 200px;" name ="address" id="address" required></td>
        </tr>
        <tr>
          <td >가입 목적</td>
          <td style="text-align: left;">
            <select name = "who" id = "who" style="width: 100px;">
              <option value="1">판매</option>
              <option value="2">구매</option>
            </select>
          </td>
        </tr>
      </table>

      <p margin = "100px" text-align="center"><input class="btn reverse" type="submit" value="회원가입"></a></p>

